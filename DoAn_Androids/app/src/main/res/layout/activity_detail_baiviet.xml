<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:isScrollContainer="true"
    tools:context=".DetailBaiviet">

    <TextView

        android:id="@+id/tieudeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiêu đề"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imgDetail"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:src="@drawable/logobaosss" />

  <WebView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      
      android:id="@+id/contents"
      tools:ignore="WebViewLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Bình luận" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_binh_luan"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@color/com_facebook_button_login_silver_background_color_pressed" />

    <EditText
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="onGuiComment"
        android:text="Gửi" />
</LinearLayout>
</ScrollView>